<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Vocab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:text="@string/vocab"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/input_your_vocabulary_in_english" />

        <EditText
            android:id="@+id/vocab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 3"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 4"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 5"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 6"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 7"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 8"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 9"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vocab10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="english vocab term 10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/Continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>